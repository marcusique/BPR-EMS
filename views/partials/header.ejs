<!DOCTYPE html>
<html>
  <head>
    <title>Employee Management System</title>
    <!--Import Google Icon Font-->
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <!--Import materialize.css-->
    <link
      type="text/css"
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
      media="screen,projection"
    />
    <link rel="icon" href="/favicon.png" sizes="32x32" />
    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha256-3edrmyuQ0w65f8gfBsqowzjJe2iM6n0nKciPUp8y+7E="
      crossorigin="anonymous"
    ></script>
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"
    ></script>
    <!-- Bootstrap -->
    <!-- <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css"
      integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4"
      crossorigin="anonymous"
    /> -->
    <!---Import custom css file-->
    <link rel="stylesheet" href="/stylesheets/main.css" />
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <nav>
      <div class="nav-wrapper blue darken-3">
        <a href="/calendar" class="brand-logo"
          ><img class="responsiveImage" src="/logo.png"
        /></a>
        <a href="#" data-target="mobile-demo" class="sidenav-trigger"
          ><i class="material-icons">menu</i></a
        >
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <% if(currentUser && currentUser.userRole == 'Admin' || currentUser &&
          currentUser.userRole == 'Manager') {%>
          <li>
            <a href="/employees"
              ><i title="Employee directory" class="material-icons left"
                >person</i
              >Employee Directory</a
            >
          </li>
          <li>
            <a href="/clients"
              ><i title="Client directory" class="material-icons left">group</i
              >Client Directory</a
            >
          </li>
          <li>
            <a href="/tasks"
              ><i title="Task directory" class="material-icons left"
                >assignment</i
              >Task Directory</a
            >
          </li>

          <li>
            <a href="/notifications"
              ><i title="Notifications" class="material-icons left"
                >notifications</i
              ></a
            >
          </li>
          <%}%>
          <li>
            <a href="/logout"
              ><i title="Logout" class="material-icons left">exit_to_app</i
              >Logout from <strong><%=currentUser.username%></strong></a
            >
          </li>
        </ul>
      </div>
    </nav>
    <ul class="sidenav" id="mobile-demo">
      <li>
        <a href="/employees">
          <i class="material-icons left">person</i>Employee Directory
        </a>
      </li>
      <li>
        <a href="/clients">
          <i class="material-icons left">group</i>Client Directory
        </a>
      </li>
      <li>
        <a href="/tasks">
          <i class="material-icons left">assignment</i>Task Directory
        </a>
      </li>
      <li>
        <a href="/notifications">
          <i class="material-icons left">notifications</i>Notifications
        </a>
      </li>
      <li>
        <a href="/logout">
          <i class="material-icons left">exit_to_app</i>Logout from
          <strong><%=currentUser.username%></strong>
        </a>
      </li>
    </ul>

    <!-- Handling toasts with success and error messages -->
    <% if (success && success.length > 0) { %>
    <script>
      M.toast({ html: '<%= success %>' });
    </script>
    <% } else if (error && error.length > 0) { %>
    <script>
      M.toast({ html: '<%= error %>' });
    </script>
    <% } %>
    <!-- Side navigation on mobile -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        let elems = document.querySelectorAll('.sidenav');
        let instances = M.Sidenav.init(elems);
      });
    </script>
  </body>
</html>
