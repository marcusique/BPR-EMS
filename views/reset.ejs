  <body>
    <div class="row">
      <div class="col l12 m12 s12 greeting">
        <h2>Password reset</h2>
        <h6>enter your new password</h6>
        <div class="loginForm col l4 m6 s12 offset-l4 offset-m4 offset">
          <form action="/reset/<%= token %>" method="POST">
            <div class="input-field">
              <label for="password">New Password</label>
              <input type="password" name="password" value="" />
            </div>
            <div class="input-field">
              <label for="confirm">Confirm Password</label>
              <input type="password" name="confirm" value="" />
            </div>
            <div class="col s12">
              <button type="submit" class="btn-small white black-text">
                Update Password
              </button>
              <a href="/" class="btn-small white black-text">
                Cancel
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- Handling toasts with success and error messages -->
    <% if (success && success.length > 0) { %>
    <script>
      M.toast({ html: '<%= success %>' });
    </script>
    <% } else if (error && error.length > 0) { %>
    <script>
      M.toast({ html: '<%= error %>' });
    </script>
    <% } %>
  </body>
</html>
