  <body>
    <div class="row col s12">
      <div class="row">
        <div class="col l12 m10 s11 greeting">
          <h2>Password reset</h2>
          <h6 class="flow-text">
            enter your email address to receive password reset link
          </h6>
          <div class="login-form col l4 m6 s9 offset-l4 offset-m4 offset-s2">
            <form action="/forgot" method="POST">
              <div class="input-field">
                <input
                  type="email"
                  name="email"
                  class="validate"
                  placeholder="Email"
                />
              </div>
              <div>
                <input
                  class="waves-effect white black-text btn-small"
                  type="submit"
                  value="Reset"
                />
                <a
                  href="javascript:history.back()"
                  class="waves-effect white black-text btn-small"
                  >Cancel</a
                >
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- Handling toasts with success and error messages -->
    <% if (success && success.length > 0) { %>
    <script>
      M.toast({ html: '<%= success %>' });
    </script>
    <% } else if (error && error.length > 0) { %>
    <script>
      M.toast({ html: '<%= error %>' });
    </script>
    <% } %>
  </body>
</html>
